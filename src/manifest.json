{
	"name": "AIpex —— Tab & History Manager, AI Companion",
	"description": "Supercharge Chrome with commands, shortcuts, and AI",
	"offline_enabled": true,
	"version": "1.4.9",
	"manifest_version": 3,
	"action": {
		"icons": {
			"16": "assets/ai-icon-16.png",
			"48": "assets/ai-icon-48.png",
			"128": "assets/ai-icon-128.png"
		},
		"default_popup": "popup.html"
	},
	"icons": {
		"16": "assets/ai-icon-16.png",
		"48": "assets/ai-icon-48.png",
		"128": "assets/ai-icon-128.png"
	},
	"commands": {
		"open-aipex": {
			"suggested_key": {
				"default": "Ctrl+M",
				"mac": "Command+M"
			},
			"description": "Open command menu"
		}
	},
	"background": {
		"service_worker": "background.js"
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"run_at": "document_end",
			"js": [
				"focus.js",
				"jquery.js",
				"content.js",
				"virtualized-list.min.js",
				"mark.js",
				"highlight.js"
			],
			"css": ["content.css", "highlight.css"]
		}
	],
	"web_accessible_resources": [
		{
			"resources": [
				"content.html",
				"newtab.html",
				"assets/*",
				"popup.css",
				"popup.js",
				"setting.html",
				"setting.js",
				"popup.html",
				"popup.js"
			],
			"matches": ["<all_urls>"]
		}
	],
	"permissions": [
		"tabs",
		"tabGroups",
		"activeTab",
		"bookmarks",
		"browsingData",
		"history",
		"scripting",
		"search",
		"commands",
		"storage",
		"contextMenus",
		"scripting",
		"sessions"
	],
	"host_permissions": [
		"https://www.googleapis.com/*",
		"https://gstatic.com/*",
		"*://*/*"
	]
}

